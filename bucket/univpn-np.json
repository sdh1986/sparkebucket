    "hash": "388575f847c7dbe24b6bd654a654d2ea91ab46193b514a10f2f35d4d190d9d07",
    "installer": {
        "script": [
            "Expand-Archive -Path \"$dir\\$fname\" -DestinationPath \"$dir\" -Force",
            "$exe = (Get-ChildItem -Path \"$dir\" -Filter '*.exe' -Recurse | Select-Object -First 1).FullName",
            "Start-Process -Wait -FilePath $exe -ArgumentList '/S' -Verb RunAs | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "# Step 1: Find and uninstall the TAP virtual network adapter",
            "Write-Host 'Attempting to remove TAP-Windows Adapter V9...'",
            "$tapAdapter = Get-PnpDevice -Class Net -FriendlyName 'TAP-Windows Adapter V9' -ErrorAction SilentlyContinue",
            "if ($tapAdapter) {",
            "    Write-Host 'Found TAP adapter, uninstalling...'",
            "    $null = $tapAdapter | Remove-PnpDevice -Confirm:$false -Force",
            "}",
            "else {",
            "    Write-Host 'TAP adapter not found, skipping.'",
            "}",
            "",
            "# Step 2: Run the original application uninstaller",
            "Write-Host 'Running application uninstaller...'",
            "$paths = 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\*', 'HKLM:\\SOFTWARE\\WOW6432Node\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\*'",
            "$app = Get-ItemProperty $paths -ErrorAction SilentlyContinue | Where-Object { $_.DisplayName -match 'UniVPN' } | Select-Object -First 1",
            "if ($app) {",
            "    $uninst = $app.UninstallString",
            "    if ($uninst) {",
            "        $uninst = $uninst -replace ' /S$', ''",
            "        Start-Process -FilePath $uninst -ArgumentList '/S' -Wait -Verb RunAs | Out-Null",
            "    }",
            "}",
            "else {",
            "    Write-Warning 'Could not find UniVPN in the list of installed programs.'",
            "}",
            "",
            "# Step 3: Remove user configuration and log files",
            "Write-Host 'Removing user configuration and log files...'",
            "$configPath = \"$env:ProgramData\\UniVPN\"",
            "if (Test-Path $configPath) {",
            "    Remove-Item -Path $configPath -Recurse -Force -ErrorAction SilentlyContinue",
            "    Write-Host \"Removed directory: $configPath\"",
            "}",
            "else {",
            "    Write-Host \"Configuration directory not found at '$configPath', skipping.\"",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.leagsoft.com/doc/article/103107.html",
        "regex": "(?<patch>\\d+\\.\\d+\\.\\d+\\.\\d+)"
    },
    "autoupdate": {
        "url": "https://download.leagsoft.com/download/UniVPN/win/univpn-win-full-$version-signed.zip",
